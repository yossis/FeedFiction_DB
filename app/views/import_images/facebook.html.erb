<h1>Please choose image and start your story</h1>
<div id="story-container">
	<ul id="tiles" class="unstyled">
		<% @images.each do |image|%>
			<li class="story-box">
				<% ratio = aspect_ratio(image['src_big_width'], image['src_big_height'], 190) %>
				<%=  image_tag(image['src_big'] , width: ratio['new_width'].to_s+'px' , height: ratio['new_height'].to_s+'px')  %>
				<div class="tiels-items-container">
					<a class="btn btn-small"><i class="icon-edit"></i>Start Story</a>		
				</div>

			</li>

		<% end %>
	</ul>
</div>
