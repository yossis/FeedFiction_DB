<div class="login-box">
	<h1>Log in to your account</h1>
	<%= render 'devise/shared/social_links' %>

	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name) ,  defaults: { input_html: { class: 'form-horizontal' } }) do |f| %>
		<%= f.error_notification %>
		<div class="form-inputs">
    	<ul>
    		<li><%= f.input_field :email, :required => true, placeholder: 'Email' %></li>
    		<li><%= f.input_field :password, :required => true , placeholder: 'Password' %></li>
        <li><%= f.input :remember_me, :as => :boolean, label_html: { class: 'remember-me' } if devise_mapping.rememberable? %></li>
    	</ul>
     </div>

    <div >
      <%= f.button :submit, "Sign in" , class: 'btn-primary btn-large'%>
    </div>
 <% end %>
 <div><%= link_to "Forgot your password?", new_password_path(resource_name) %></div>

 <div >
      <span>New Member?</span>
      <%= link_to "Sign up", new_registration_path(resource_name) %>
 </div>

	
</div>
