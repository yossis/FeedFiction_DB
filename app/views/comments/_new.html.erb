<%= form_for(@comment , remote: true) do |f| %>
  
  <%= f.hidden_field :story_id%>
  
  <textarea <%= 'unlogged=1' unless current_user %> rows="20" name="comment[comment]" id="comment_comment" data-function="validateComment" cols="40" class="userFunction"></textarea>
  
  <% if current_user%>
	  <div class="actions">
	    <input type="submit" name="submit" disabled/>
	  </div>
  <% end %>
<% end %>
