

<span id="like-<%=story.id%>">
	<span class="likes">
	<% if current_user %>
		<% if current_user.like?(story.id) %>
			<a class="btn btn-small btn-liked" title="Liked" disabled>
			  	<i class="mini-ico-heart"></i>
			</a>
		<%else %>
			<%= render 'stories/like_form' , story: story %>
		<% end %>
	<% else %>
	<span class="like-unregistered">
		<a href="#like" class="btn btn-small btn-info btn-like unregistered userFunction" data-function="validateLike" unlogged="1"><i class="mini-ico-heart mini-white icon-white"></i></a>
	</span>
	<% end %>
	</span>
	<% if story.likes.length>0 %>
		<span><a href="<%=like_path(story.id)%>" data-toggle="modal" data-target="#like-modal" class="like-link"><%= pluralize(story.likes.length,'Like')%></a></span>
	<% end %>
</span>