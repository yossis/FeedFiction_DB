			<!-- start: Row -->
			<div class="row">
			<!-- start: Contact Info -->
				<div class="span3">
					<div class="title"><h3>Contact Info</h3></div>
					<p>
						<b>FeedFicion </b>
					</p>
					<p>
						P.O.Box 1060
					</p>
					<p>	
						Zoran, Israel , 42823
					</p>	
					
					<p>
						Email: support AT feedfiction.com
					</p>
					
				</div>
				<!-- end: Contact Info -->		

				<!-- start: Contact Form -->
				<div class="span4">
					<div class="title"><h3>Contact Form</h3></div>

					<!-- start: Contact Form -->
					<div id="contact-form">

						<%= form_for @contact do |f| %>
					  <% if @contact.errors.any? %>
					    <div class="error_messages">
					      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this message from being saved:</h2>
					      <ul>
					      <% @contact.errors.full_messages.each do |msg| %>
					        <li><%= msg %></li>
					      <% end %>
					      </ul>
					    </div>
					  <% end %>
					 
					
							<fieldset>
								<div class="clearfix">
									<label for="name"><span>Name:</span></label>
									<div class="input">
										<%= f.text_field :name %>
									</div>
								</div>

								<div class="clearfix">
									<label for="email"><span>Email:</span></label>
									<div class="input">
										<%= f.text_field :email , class: 'input-xlarge'%>
									</div>
								</div>

								<div class="clearfix">
									<label for="message"><span>Message:</span></label>
									<div class="input">
										<%= f.text_area :content, :rows => 7 , class: 'input-xlarge'%>
										
									</div>
								</div>

								<div class="actions">
									<button tabindex="3" type="submit" class="btn btn-succes btn-large">Send message</button>
								</div>
							</fieldset>

						<% end %>


					</div>
					<!-- end: Contact Form -->

				</div>
				<!-- end: Contact Form -->

