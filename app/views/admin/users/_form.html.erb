<%= form_for [ :admin, @user ]  do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div><%= basic_avatar(@user)%></div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :nick_name %><br />
    <%= f.text_field :nick_name %>
  </div>
  <!-- <div class="field"> -->
    <%#= f.label :avatar %><br />
    <%#= f.text_field :avatar %>
  <!-- </div> -->
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :gender %><br />
    <%= f.text_field :gender %>
  </div>
  <div class="field">
    <%= f.label :oauth_token %>
    <%= f.text_field :oauth_token , disabled: true%>
  </div>
  <div class="field">
    <%= f.label :oauth_expires_at %>
    <%= @user.oauth_expires_at %>
  </div>
  <div class="field">
    <%= f.label :login_count %>
    <%= @user.login_count %>
  </div>
  
  <div class="field">
    <%= f.label :admin %><br />
    <%= f.number_field :admin %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
