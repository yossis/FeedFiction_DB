<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= display_meta_tags :site => 'FeedFiction'%>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield :head %>

    <%= render 'layouts/shim' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div class="container main-body">
      <%= yield %>
      <!-- Start Story Modal -->
      <%= render 'stories/start_story_modal' %>
    
    </div>
    <%if current_user%>
      <div id="like-modal" class="modal hide fade in"></div>
      <div id="UploadModal" class="modal hide fade out">
        <%= render 'stories/upload_modal' %>
      </div>
    <%else%>
      <div id="loginPreloader" class="modal hide fade">
        <div class="modal-body">
          <p>Logging you inâ€¦</p>
        </div>
      </div>
    <%end%>
    <%= debug(params) if Rails.env.development? %>
  </body>
</html>