<div id="fb-root" data-channel-url="<%= fb_channel_url %>"></div>
<header>
  <!--start: Container -->
  <div class="container">
    <!--start: Row -->
    <div class="row">
     <%= render 'layouts/logo_nav' %>
        
      <!--start: Navigation -->
       <div class="navbar-actions">
        <div class="navbar navbar-inverse">
            <div class="navbar-inner">
                  <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                  </a>
                  <div class="nav-collapse collapse">
                    <ul class="nav">
                    <% if current_user %>
                      <% if current_user.has_notification? %>
                        <li><a href='<%= notifications_show_url%>'>
                            <%if current_user.new_notifications_count==0%>
                              <i class="mini-ico-bell"></i>
                            <%else%>
                              <i class="mini-ico-bell mini-white"></i><span class="notify-count"><%=current_user.new_notifications_count%></span>
                            <% end %>
                            </a>
                        </li>
                      <%end%>
                      <li class="divider-vertical"></li>
                      <%= render 'layouts/start_story_link' , :@enable_class => 'class=hidden-desktop'%>
                      <li class="divider-vertical"></li>
                      <%= render 'layouts/about_dd_menu' %>
                      <li class="divider-vertical"></li>
                      <li> <%= avatar_rounded_mini(current_user)%></li>
                       <li id="fat-menu" class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                           <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
<li><%=link_to 'My Feed', root_url if current_user%></li>
        <li><%=link_to 'Invite friends', '#', class: 'facebook_invitation_link'%></li>

                           <li class="divider"></li>
                          <li><%= link_to "Following",  following_user_path(current_user) %></li>
                          <li><%= link_to "Followers",  followers_user_path(current_user) %></li>
                          <li class="divider"></li>
                          <li><%= link_to "Sign out", signout_path %></li>
                          </li>
                        </ul>
                      </li>
                      
                      
                    <% else %>
                      <%= render 'layouts/about_dd_menu' %>
                      <li class="divider-vertical"></li>
                      <li><a href class="sign-in"><b class="btns fb-icon"></b> Sign in with Facebook</a>

                    <% end %>



                    </ul>
                  </div>
              </div>
            </div>
        
      </div>  
      <!--end: Navigation -->
        
    </div>
    <!--end: Row -->
    <% if current_user%>
        <div class="navbar-start-story">
         <a class="userFunction btn btn-primary" data-function="startStoryModal" alt="Start a Story" title="Start a Story"><i class="mini-ico-pencil mini-white"></i> <span class="hidden-mini-phones">Start a story</span></a>
       </div>
    <% end %>
  </div>
  <!--end: Container-->     
    


</header>
<% if current_user%>
<div class="second-header">
  <div class="navbar navbar-inverse">
    <div class="navbar-inner">
      <ul class="nav">
        <li <%= @everything_active%>><%=link_to 'All Stories', general_feed_url %></li>
        <li <%= @my_feed_active%>><%=link_to 'My Feed', root_url %></li>
        <%= render 'layouts/start_story_link' %>
      </ul>
    </div>
  </div>
</div>
<%end%>

<!--end: Header-->
<%= yield :home%>


