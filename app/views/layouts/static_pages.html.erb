<!DOCTYPE html>
<html lang="en">
  <head>
    
    <%= display_meta_tags :site => full_title(yield(:title))%>
    <%= stylesheet_link_tag "application", media: "all" %>
    <link rel='stylesheet' type='text/css' href='http://fonts.googleapis.com/css?family=Lobster' >
    
    <link href='http://fonts.googleapis.com/css?family=Sanchez' rel='stylesheet' type='text/css'>
    
    <%= javascript_include_tag "application" %>
    
    <!-- start: Mobile Specific -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!-- end: Mobile Specific -->

    <%= csrf_meta_tags %>
    <%= yield :head %>

    <%= render 'layouts/shim' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    
  <div id="wrapper">
    <div class="container">
      <%= yield :general_nav %>
      <div class="static-pages">
        <%= render 'static_pages/static_pages_nav' if @is_notifications.nil?%>
        <div class="story-page">
          <div class="header-hr">
            <h1><%= @static_page_full_name%></h1>
          </div>
          <div class="story">
            <div class="picture">
              <%= image_tag("#{@static_page_story_image}.jpg", class: @static_page_story_image)%>
            </div>
            <div class="story-area">
              <h2><%= @static_page_full_name%></h2>
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
      <!-- Start Story Modal -->
      <%= render 'stories/start_story_modal' %>
    
    </div>
    <%if current_user%>
      <div id="like-modal" class="modal hide fade in"></div>
      
    <%else%>
      <%= render 'layouts/unregisterd_modals' %>
      
    <%end%>
    <%=render 'layouts/footer' %>
  </div>
    <%= debug(params) if Rails.env.development? %>
    <%= render 'layouts/analytics' %>

  </body>
</html>