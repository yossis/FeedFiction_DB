<h1>Listing flags</h1>

<table>
  <tr>
    <th>Story</th>
    <th>Flag reason</th>
    <th>Reason</th>
    <th>Reporter user</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @flags.each do |flag| %>
  <tr>
    <td><%= flag.story_id %></td>
    <td><%= flag.flag_reason_id %></td>
    <td><%= flag.reason %></td>
    <td><%= flag.reporter_user_id %></td>
    <td><%= link_to 'Show', flag %></td>
    <td><%= link_to 'Edit', edit_flag_path(flag) %></td>
    <td><%= link_to 'Destroy', flag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

